<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafff8"
    tools:context="com.petgo.petgo.sesion_usuario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#fafff8"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="27dp"
                android:layout_height="31dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/button_atras" />





        </LinearLayout>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Iniciar sesión"
            android:textColor="#3F3F3F"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="correo"
            android:textColor="#3F3F3F"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_sesion_email"
            android:layout_width="280dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_tipoa"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Contraseña"
            android:textColor="#3F3F3F"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp">

            <EditText
                android:id="@+id/edit_sesion_pass"
                android:layout_width="180dp"
                android:layout_height="43dp"
                android:background="@drawable/edit_tipob"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="14sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="16dp"></FrameLayout>

        <Button
            android:id="@+id/button_sign_go"
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/button_enter" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
