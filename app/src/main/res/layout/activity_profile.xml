<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafff8"
    tools:context="com.petgo.petgo.profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#32302f">

                <Button
                    android:id="@+id/profile_button_regresar"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/boton_back" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/boton_menu"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:text="PetGo"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

          <!--      <Button
                    android:id="@+id/boton_menu"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_alignBottom="@+id/profile_button_regresar"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="11dp"
                    android:layout_marginRight="11dp"
                    android:background="@drawable/boton_menu" />  -->

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp">


                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="295dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:text="Profile"
                        android:textColor="#3F3F3F"
                        android:textSize="25sp" />


                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/logo" />

                    <TextView
                        android:id="@+id/profile_usuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/registro_textView5"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="Phone number"
                        android:textColor="#3F3F3F"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/profile_phone"
                        android:layout_width="280dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center"
                        android:background="@drawable/edit_tipoa"
                        android:ems="10"
                        android:inputType="phone"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/registro_textView6"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="Emergency phone number"
                        android:textColor="#3F3F3F"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/profile_phone2"
                        android:layout_width="280dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center"
                        android:background="@drawable/edit_tipoa"
                        android:ems="10"
                        android:inputType="phone"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/registro_textView2"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="Email"
                        android:textColor="#3F3F3F"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/profile_email"
                        android:layout_width="280dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center"
                        android:background="@drawable/edit_tipoa"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/registro_textView3"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="Old password"
                        android:textColor="#3F3F3F"
                        android:textSize="16sp" />

                    <FrameLayout
                        android:layout_width="280dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="0dp">

                        <EditText
                            android:id="@+id/profile_pass"
                            android:layout_width="180dp"
                            android:layout_height="43dp"
                            android:background="@drawable/edit_tipob"
                            android:ems="10"
                            android:inputType="textPassword"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:textSize="14sp" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/registro_textView4"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="New password confirmation"
                        android:textColor="#3F3F3F"
                        android:textSize="16sp" />

                    <FrameLayout
                        android:layout_width="280dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="0dp">

                        <EditText
                            android:id="@+id/profile_pass2"
                            android:layout_width="180dp"
                            android:layout_height="43dp"
                            android:background="@drawable/edit_tipob"
                            android:ems="10"
                            android:inputType="textPassword"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:textSize="14sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"></FrameLayout>

                    <Button
                        android:id="@+id/profile_button"
                        android:layout_width="210dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/boton_save_change" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                    </FrameLayout>


                </LinearLayout>


            </ScrollView>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
