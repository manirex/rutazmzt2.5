<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafff8"
    tools:context="com.petgo.petgo.registro_usuario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#32302f"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/boton_back" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:text="PetGo"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="match_parent">

            </FrameLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="User Registration"
                    android:textColor="#3F3F3F"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/registro_textView1"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Full name"
                    android:textColor="#3F3F3F"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/registro_editText1"
                    android:layout_width="280dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_tipoa"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/registro_textView5"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Phone number"
                    android:textColor="#3F3F3F"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/registro_editText5"
                    android:layout_width="280dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_tipoa"
                    android:ems="10"
                    android:inputType="phone"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/registro_textView6"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Emergency phone number"
                    android:textColor="#3F3F3F"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/registro_editText6"
                    android:layout_width="280dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_tipoa"
                    android:ems="10"
                    android:inputType="phone"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/registro_textView2"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Email"
                    android:textColor="#3F3F3F"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/registro_editText2"
                    android:layout_width="280dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_tipoa"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/registro_textView3"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Password"
                    android:textColor="#3F3F3F"
                    android:textSize="16sp" />

                <FrameLayout
                    android:layout_width="280dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp">

                    <EditText
                        android:id="@+id/registro_editText3"
                        android:layout_width="180dp"
                        android:layout_height="43dp"
                        android:background="@drawable/edit_tipob"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textSize="14sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/registro_textView4"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Password confirmation"
                    android:textColor="#3F3F3F"
                    android:textSize="16sp" />

                <FrameLayout
                    android:layout_width="280dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp">

                    <EditText
                        android:id="@+id/registro_editText4"
                        android:layout_width="180dp"
                        android:layout_height="43dp"
                        android:background="@drawable/edit_tipob"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textSize="14sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"></FrameLayout>

                <Button
                    android:id="@+id/registro_button1"
                    android:layout_width="210dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/boton_register_user" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                </FrameLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>
