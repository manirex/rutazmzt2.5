<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafff8"
    tools:context="com.petgo.petgo.my_rides">


    <RelativeLayout
        android:background="#32302f"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <Button
            android:id="@+id/my_rides_button_regresar"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/boton_back" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/lost_item_button_regresar"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="PetGo"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:id="@+id/textView9" />

      <!--  <Button
            android:id="@+id/riders_boton_menu"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:background="@drawable/boton_menu" />  -->

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="My Rides"
            android:textColor="#3F3F3F"
            android:textSize="25sp" />



<!--
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"></FrameLayout>
-->

    </LinearLayout>

</android.support.constraint.ConstraintLayout>